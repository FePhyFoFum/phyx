RM := rm -rf

#this is really nothing but for testing the capabilities of the copper library
MRCA_SRC = main_stmap.cpp
MRCA_OBJ = main_stmap.o
MRCA_DEP = main_stmap.d

#this should be the basic copper library sources, objects and deps
CPP_SRCS += \
./utils.cpp \
./node.cpp \
./tree.cpp \
./tree_reader.cpp \
./tree_utils.cpp \
./sequence.cpp \
./phylip_reader.cpp \
./rate_model.cpp \
./state_reconstructor.cpp \
./optimize_state_reconstructor.cpp

CPP_OBJS += \
./utils.o \
./node.o \
./tree.o \
./tree_reader.o \
./tree_utils.o \
./sequence.o \
./phylip_reader.o \
./rate_model.o \
./state_reconstructor.o \
./optimize_state_reconstructor.o

CPP_DEPS += \
./utils.d \
./node.d \
./tree.d \
./tree_reader.d \
./tree_utils.d \
./sequence.d \
./phylip_reader.d \
./rate_model.d \
./state_reconstructor.d \
./optimize_state_reconstructor.d

CPP_LIBS = -llapack -lblas -lgfortran -lgsl -lgslcblas -lm -lpthread  

OPT_FLAGS += \
-O3 -ffast-math -ftree-vectorize -g3 -Wall
#-g -O0

# Each subdirectory must supply rules for building sources it contributes
%.o: ./%.cpp
	@echo 'Building file: $<'
	@echo 'Invoking: GCC C++ Compiler'
	g++ $(OPT_FLAGS) -c -fmessage-length=0 -MMD -MP -MF"$(@:%.o=%.d)" -MT"$(@:%.o=%.d)" -o  "$@" "$<"
	@echo 'Finished building: $<'
	@echo ' '

# All Target
all: phyx_stmap

phyx_stmap: $(CPP_OBJS) $(MRCA_OBJ) 
	@echo 'Building target: $@'
	@echo 'Invoking: GCC C++ Linker'
	g++ -o "phyx_stmap" $(MRCA_OBJ) $(CPP_OBJS) $(CPP_LIBS)
	@echo ' '

# Other Targets
clean:
	-$(RM) *.o *.d phyx_mrca
	-@echo ' '

